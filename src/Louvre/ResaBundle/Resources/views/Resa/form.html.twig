<div class="well">
    {{ form_start(form) }}

    {{ form_errors(form) }}

        <div class="tab-content">
            <div class="tab-pane active" role="tabpanel" id="step1">
                <h3>Etape 1</h3>
                <p>Veuillez choisir la date de votre visite</p>

                <div class="form-group">
                    {{ form_label(form.dateResa, "Date de votre visite", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.dateResa) }}
                    <div class="input-group date" id='datetimepicker1'>
                        
                        
                        {{ form_widget(form.dateResa, {'attr': {'class': 'form-control'}}) }}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar">
                                
                            </span>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    {{form_label(form.typeTicket, "Type de ticket", {'label_attr': {'class': 'control-label'}}) }}
                    {{form_errors(form.typeTicket)}}
                    {{form_widget(form.typeTicket)}}
                </div>

                <ul class="list-inline pull-right">
                    <li><button type="button" class="btn btn-primary next-step">Save and continue</button></li>
                </ul>
            </div>

            <div class="tab-pane" role="tabpanel" id="step2">
                <h3>Etape 2</h3>
                <p>Donn√©es des visiteurs</p>
                {{form_row(form.visiteurs)}}


                

                

                <a href="#" id="add_visiteur" class="btn btn-default">Ajouter un visiteur</a>

                {# {{form_row(form.visiteurs)}} #}
                


                <ul class="list-inline pull-right">
                    <li><button type="button" class="btn btn-default prev-step">Previous</button></li>
                    <li><button type="button" class="btn btn-primary next-step">Save and continue</button></li>
                </ul>
            </div>

            <div class="tab-pane" role="tabpanel" id="step3">
                <h3>Etape 3</h3>
                <p>This is step 3</p>
                {{form_row(form.email)}}
                <ul class="list-inline pull-right">
                    <li><button type="button" class="btn btn-default prev-step">Previous</button></li>
                    <li><button type="button" class="btn btn-default next-step">Skip</button></li>
                    <li><button type="button" class="btn btn-primary btn-info-full next-step">Save and continue</button></li>
                </ul>
            </div>
            <div class="tab-pane" role="tabpanel" id="complete">
                <h3>Complete</h3>
                <p>You have successfully completed all steps.</p>
            </div>
            <div class="clearfix"></div>
        </div>
    {{ form_end(form) }}
</div>